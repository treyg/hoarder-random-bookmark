# Hoarder API (required)
HOARDER_API_KEY=your_api_key_here
HOARDER_SERVER_URL=https://your-hoarder-instance.com

# Notification settings
NOTIFICATION_METHOD=email  # or discord
NOTIFICATION_FREQUENCY=daily  # or weekly, monthly
BOOKMARKS_COUNT=3
SPECIFIC_LIST_ID=''  # Leave empty for all bookmarks

# Email configuration (required if NOTIFICATION_METHOD=email)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_password
EMAIL_RECIPIENT=recipient@example.com

# Discord configuration (required if NOTIFICATION_METHOD=discord)
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_discord_channel_id 