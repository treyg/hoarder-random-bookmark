    "bun-types": "^1.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@hoarderapp/sdk": "^0.22.0",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "hono": "^4.7.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.0",
    "zod": "^3.24.2"
  }
